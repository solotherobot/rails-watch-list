<div class = "text-center mt-3">
<h1>Make a new Bookmark</h1>
<h2><%= @list.name%></h2>
<div class = "container text-center">
    <div class = "row d-flex justify-content-center">
        <div class = "col-5">
    <%= simple_form_for([@list, @bookmark]) do |f|%>
        <%=f.association :movie, prompt: "Add a movie", collection: Movie.all, input_html: {id: "tom_select"} %>
        <%=f.input :comment%>
        <%=f.submit%>
    <%end%>
    </div>
</div>
</div>
